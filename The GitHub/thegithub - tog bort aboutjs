                }, 2000)
            }
                
            else if(pressedpersona==true){
                removePersonaDivs()
                
                    setTimeout(function(){
                    pressedpersona = false
                    addResumeDivs()
                }, 2000)
            }
                
            else if(pressedwhatsnext==true){
                removeNextDivs()
                
                    setTimeout(function(){
                    pressedwhatsnext = false
                    addResumeDivs()
                }, 2000)
            }
            
            else if(removed == true && pressededucation == false && pressedpersona == false && pressedresume == false){
                    setTimeout(function(){
                    addResumeDivs()
                }, 0000)
            } 
                
            
        })
            
            

        
    });
    


